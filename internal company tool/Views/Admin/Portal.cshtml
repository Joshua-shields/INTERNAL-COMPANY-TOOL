@model CRUD_APP_.Models.Adminhomedashboard

@{
    ViewData["Title"] = "Admin Portal";
}

<!-- Logo Header -->
<div class="logo-header">
    <img src="~/Images/Logo.png" alt="Company Logo" class="header-logo-image">
</div>

<!-- Admin Portal Content Section -->
<div class="content-section" id="admin-portal">
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <h1 class="section-title"><b>Admin Portal.</b></h1>
        <a href="@Url.Action("Logout", "Home")">
            <button class="cancelbtn" style="width: auto; margin: 0;">Logout</button>
        </a>
    </div>
    <hr class="section-divider">
    <p>Welcome to the admin portal. Manage users, view all tickets, and oversee system operations.</p>
    
    <div class="Usercontainer" style="margin-top: 40px;">
        <a href="@Url.Action("Dashboard", "Home")">
            <button class="seetaskbtn">View Dashboard</button>
        </a>
        <button class="approvebtn">Manage Users</button>
        <a href="@Url.Action("ViewTicket", "Home")">
            <button class="contactbtn">View All Tickets</button>
        </a>
    </div>
</div>
