@model CRUD_APP_.Models.Adminhomedashboard

@{
    ViewData["Title"] = "Admin Login";
}

<!-- Logo Header -->
<div class="logo-header">
    <img src="~/Images/Logo.png" alt="Company Logo" class="header-logo-image">
</div>

<!-- Login Section -->
<div class="content-section" id="admin-login">
    <h1 class="section-title"><b>Admin Portal Login.</b></h1>
    <hr class="section-divider">
    <p>Welcome â€” use your credentials to sign in to access the admin portal.</p>
    
    @if (ViewBag.ErrorMessage != null)
    {
        <div style="color: red; padding: 15px; margin: 20px auto; max-width: 600px; background-color: #ffe6e6; border: 1px solid red; border-radius: 5px; text-align: center;">
            <strong>@ViewBag.ErrorMessage</strong>
        </div>
    }

    <!-- Login Form -->
    <div style="max-width: 500px; margin: 40px auto; padding: 20px;">
        <form asp-controller="Home" asp-action="Dashboard" method="post" style="background-color: #fefefe; padding: 20px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
            <div class="imgcontainer">
                <img src="~/images/PROFILE IMAGE.avif" alt="Avatar" class="avatar">
            </div>

            <div class="container">
                <label for="uname"><b>Username</b></label>
                <input type="text" id="uname" placeholder="Enter Username" name="uname" required>

                <label for="psw"><b>Password</b></label>
                <input type="password" id="psw" placeholder="Enter Password" name="psw" required>
                
                <label for="seceret"><b>Secret Key</b></label>
                <input type="password" id="seceret" placeholder="Enter Secret Key" name="seceret" required>
                
                <button type="submit">Login</button>
                
                <label>
                    <input type="checkbox" checked="checked" name="remember" style="width: auto; margin-right: 5px;"> Remember me
                </label>
            </div>

            <div class="container" style="background-color:#f1f1f1; border-radius: 0 0 8px 8px;">
                <span class="psw">Need help? <a href="@Url.Action("Contact", "Home")">Contact us</a></span>
            </div>
        </form>
    </div>
</div>

