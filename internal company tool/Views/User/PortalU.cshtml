@model CRUD_APP_.Models.User_model

@{
    ViewData["Title"] = "User Portal";
}

<!-- Logo Header -->
<div class="logo-header">
    <img src="~/Images/Logo.png" alt="Company Logo" class="header-logo-image">
</div>

<!-- User Portal Content Section -->
<div class="content-section" id="user-portal">
    <h1 class="section-title"><b>Work Portal.</b></h1>
    <hr class="section-divider">
    <p>Hi, welcome to your portal. See assigned tickets and tasks below.</p>
    
    <div class="Usercontainer" style="margin-top: 40px;">
        <a href="@Url.Action("ViewTicket", "Home")">
            <button class="seetaskbtn">See Assigned tickets</button>
        </a>
        <button class="approvebtn">Approval request</button>
        <a href="@Url.Action("Contact", "Home")">
            <button class="contactbtn">Get in touch</button>
        </a>
    </div>
</div>
