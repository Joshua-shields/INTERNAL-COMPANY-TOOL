﻿@{
    ViewData["Title"] = "Home Page";
}

<!-- Logo Header -->
<div class="logo-header">
    <img src="~/Images/Logo.png" alt="Company Logo" class="header-logo-image">
</div>
<div class="slideshow-section">
    <!-- Slideshow -->
    <div class="slideshow-container">
        <div class="mySlides slide-display">
            <img src="~/Images/image1.jpg" style="width:100%" alt="Slide 1">
            <div class="slide-caption slide-caption-left">
                <span class="caption-text">Welcome to Our Platform</span>
            </div>
        </div>
        
        <div class="mySlides slide-display">
            <img src="~/Images/image2.jpeg" style="width:100%" alt="Slide 2">
            <div class="slide-caption slide-caption-middle">
                <span class="caption-text">Streamline Your Workflow</span>
            </div>
        </div>
        
        <div class="mySlides slide-display">
            <img src="~/Images/image3.jpeg" style="width:100%" alt="Slide 3">
            <div class="slide-caption slide-caption-right">
                <span class="caption-text">Boost Productivity</span>
            </div>
        </div>

        <!-- Slideshow navigation -->
        <div class="slideshow-controls">
            <div class="slide-nav-left" onclick="plusDivs(-1)">
                <span>&#10094;</span>
            </div>
            <div class="slide-nav-right" onclick="plusDivs(1)">
                <span>&#10095;</span>
            </div>
            
            <div class="slide-dots">
                <span class="dot" onclick="currentDiv(1)"></span>
                <span class="dot" onclick="currentDiv(2)"></span>
                <span class="dot" onclick="currentDiv(3)"></span>
            </div>
        </div>
    </div>
</div>

<!-- Services Section -->
<div class="content-section" id="services">
    <h1 class="section-title"><b>Services.</b></h1>
    <hr class="section-divider">
    <p>This tool was designed to help keep track of tasks and provide a portal where teams can connect</p>
</div>

